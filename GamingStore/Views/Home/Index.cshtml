@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><b>Welcome GAMERS</b></h1>
    <h4 class="mb-4">Ultimate gaming <b>EXPERIENCE</b>! Don’t just play the game, feel it.</h4>
</div>

<div id="carouselExampleControls" class="carousel" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://wallpaperaccess.com/full/2650285.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Real gaming takes the stage</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://wallpaperaccess.com/full/2567207.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Get ready for fun challenges and unique online gameplay</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://i.pinimg.com/originals/bd/55/46/bd5546e271c5b71f64730517293e064b.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Gaming is a great way to learn new things and educate yourself</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h1 class="text-center mt-4">New Arrivals</h1>
<div class="row">
    @foreach (var game in Model.NewArrivals)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="@game.ImageUrl" style="width: 100%">
                    <h4 class="mt-3">@game.Title</h4>
                    <p>by @game.PublisherName</p>
                    <p>@(game.Price == 0 || game.Price == null ? "Free" : $"Price: {game.Price}$")</p>
                    <a class="btn btn-info"
                   asp-controller="Games"
                   asp-action="Details"
                   asp-route-id="@game.Id">View More</a>
                </div>
            </div>
        </div>
    }
</div>

<section class="pt-0">
    <div class="container mt-md-5">
        <h2 class="mx-4 my-0 text-center">Recent Blog Posts</h2>
        <ul class="row d-lg-flex list-unstyled  justify-content-center px-lg-0 mx-lg-0">

            @foreach (var blog in Model.Blogs)
            {
                <li class="col-lg-4 col-md-5 p-3">
                    <div>
                        <img src="@blog.ImageUrl" class="w-100">
                        <h4 class="mt-3">
                            <a class="text-dark" asp-controller="Blogs"
                           asp-action="Details"
                           asp-route-id="@blog.Id">@blog.Title</a>
                        </h4>
                    </div>
                </li>
            }

        </ul>
    </div>
</section>