@model BecomeSellerFormModel

@{
    ViewData["Title"] = "Become Seller";
}

<div class="mt-5" style="width:800px; margin:0 auto;">
    <div class="card">
        <div class="card-header text-center">
            <p class="h1"><b>Become Seller</b></p>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="James Brooks...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+111 11 111 111">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}