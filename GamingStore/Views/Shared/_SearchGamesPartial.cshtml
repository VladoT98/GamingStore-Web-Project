@model GameSearchViewModel

<form method="get" class="ml-3">
    <div class="row">

        <div class="form-group">
            <label asp-for="SearchByTitle"></label>
            <input asp-for="SearchByTitle"
                   class="form-control mb-2"
                   placeholder="Fortnite, Smite, etc...">
            <input type="submit" class="btn btn-primary mb-3 mt-2" value="Submit" />
        </div>

        <div class="form-group ml-2 mr-2">
            <div class="form-group">
                <label asp-for="Publisher"></label>
                <select asp-for="Publisher"
                        class="form-control mb-4 mr-5">
                    <option value="">All</option>
                    @foreach (var publisher in Model.Publishers)
                    {
                        <option value="@publisher">@publisher</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Sorting"></label>
            <select asp-for="Sorting"
                    class="form-control mb-4 mr-5">
                <option value="0">Recently Added</option>
                <option value="1">Price Ascending</option>
                <option value="2">Price Descending</option>
                <option value="3">Release Year Ascending</option>
                <option value="4">Release Year Descending</option>
                <option value="5">Title Alphabetically</option>
                <option value="6">Reviews Count</option>
                <option value="7">Free Games Only</option>
            </select>
        </div>

    </div>
</form>