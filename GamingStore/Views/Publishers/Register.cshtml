@model RegisterPublisherFormModel

@{
    ViewData["Title"] = "Register Publisher";
}

<div class="mt-5" style="width:800px; margin:0 auto;">
    <div class="card">
        <div class="card-header text-center">
            <p class="h1"><b>Please, Register Publisher</b></p>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-12 offset-md-2">
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Ubisoft, Epic Games...">
                                <span asp-validation-for="Name" class="small text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Employees"></label>
                                <input asp-for="Employees" class="form-control">
                                <span asp-validation-for="Employees" class="small text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="small text-danger"></span>
                            </div>
                            <input class="btn btn-primary" type="submit" value="Save" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>