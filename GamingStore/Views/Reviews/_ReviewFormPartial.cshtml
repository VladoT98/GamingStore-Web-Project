@model ReviewFormModel

<div class="mt-5" style="width:800px; margin:0 auto;">
    <div class="card">
        <div class="card-header text-center">
            <p class="h1"><b>@(Model.IsAdd ? "Add Review" : "Edit Review")</b></p>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="From"></label>
                    <input asp-for="From" class="form-control" placeholder="Fortnite, Smite, etc...">
                    <span asp-validation-for="From" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>