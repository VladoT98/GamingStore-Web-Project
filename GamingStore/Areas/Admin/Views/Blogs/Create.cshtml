@model BlogFormModel

@{
    ViewData["Title"] = "Create Blog";
}

<div class="mt-5" style="width:800px; margin:0 auto;">
    <div class="card">
        <div class="card-header text-center">
            <p class="h1"><b>Create Blog</b></p>
        </div>
        <div class="card-body">
            <form method="post" autocomplete="off">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Best games this year...">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Content" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>